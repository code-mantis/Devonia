      <KeyBinding Gesture="Ctrl+W" Command="{Binding ActiveTabsListViewModel.CloseCurrentTabCommand}" />
      <KeyBinding Gesture="Meta+W" Command="{Binding ActiveTabsListViewModel.CloseCurrentTabCommand}" />
